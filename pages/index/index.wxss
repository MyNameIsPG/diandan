.swiper {
  height: 350rpx;
  width: 100%;
  overflow: hidden
}
.swiper image {
  height: 100%;
  width: 100%;
  border-radius: 5px;
}

.swiper  .wx-swiper-dot {
  display: inline-flex;
  justify-content: space-between;
  border-radius: 50%;
}

.swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #fff;
  border-radius: 50%;
}

.swiper .wx-swiper-dot-active::before {
  background: #d74a45;
  border-radius: 50%;
}