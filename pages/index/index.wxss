image{
  width:100%; 
}
.NewsList .list_content{
  max-height: 160rpx;
  overflow: hidden;
}

.bg {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.show {
  display: none;
  text-align: left;
  position: absolute;
  top: 45%;
  left: 7%;
  width: 86%;
  background-color: white;
  z-index: 1002;
  overflow: auto;
  border-radius: 5px;
  margin-top: -94px;
}

.show .header, .show .footer {
  background-color: #d74a45;
  color: white;
  height: 70rpx; 
  line-height: 70rpx;
  font-size: 16px;
  border-radius: 5px 5px 0px 0px;
  text-indent: 10pt;
}

.show .footer {
  text-align: center;
  border-radius: 0px 0px 5px 5px;
}


.show .content view text{
  color: #bcbcbc;
  font-size: 10px; 
  float: right; 
}
.show .content view text.money{
  font-size: 16px;
  color: #e1961a;
  padding-right:5px; 
